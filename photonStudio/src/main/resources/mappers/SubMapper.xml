<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.photonstudio.mapper.SubMapper">
<select id="findAll" resultType="com.photonstudio.pojo.Sub">
select * from `${dBname}`.sub
</select>
<select id="findObject" resultType="com.photonstudio.pojo.Sub">
	select * from `${dBname}`.sub
	<if test="pageSize!=null">
	limit #{startIndex},#{pageSize}
	</if>
</select>
<select id="getRowCount" resultType="int">
	select count(*) from `${dBname}`.sub
</select>
<insert id="insertObject">
	insert into `${dBname}`.sub (subname) values (#{sub.subname})
</insert>
<delete id="deleteObjectById">
	delete from `${dBname}`.sub 
	<where>
 		subid in 
 		<foreach collection="ids" open="("
                close=")"
                separator=","
                item="id">
                #{id}
         </foreach> 
 	</where>
	</delete>
	<update id="updateObject">
	update `${dBname}`.sub
	<set>
	subname=#{sub.subname}
	</set>
	<where>
	subid=#{sub.subid}
	</where>
	</update>
</mapper>